<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="activeng.pt.activenglab.ProgramActivityFragment"
                tools:showIn="@layout/activity_program">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current read"
            android:id="@+id/tv_prog_currentread"
            android:layout_row="0"
            android:layout_column="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_prog_currentread"
            android:layout_row="1"
            android:layout_column="0"
            android:ems="4"
            android:text="99.99"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <!-- -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set point"
            android:id="@+id/tv_prog_setpoint"
            android:layout_row="2"
            android:layout_column="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_prog_setpoint"
            android:layout_row="3"
            android:layout_column="0"
            android:ems="4"
            android:text="250.0"
            android:singleLine="true"
            android:inputType="numberDecimal"/>
            <!-- android:nextFocusDown="@+id/et_setpoint" -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run"
            android:id="@+id/bt_prog_run"
            android:layout_row="3"
            android:layout_column="1"/>

        <Chronometer
            android:id="@+id/chrono_warm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/bt_prog_run_stop"
            android:layout_row="3"
            android:layout_column="3"/>

        <!-- -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cool"
            android:id="@+id/bt_prog_cool"
            android:layout_row="4"
            android:layout_column="1"/>

        <Chronometer
            android:id="@+id/chrono_cool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/bt_prog_cool_stop"
            android:layout_row="4"
            android:layout_column="3"/>

    </GridLayout>

</RelativeLayout>
