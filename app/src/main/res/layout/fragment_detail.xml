<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="activeng.pt.activenglab.DetailActivityFragment">

    <TextView
        android:id="@+id/tvLabel_BeforeListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before ListView"/>
    
    <ListView
        android:id="@+id/listview_sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvLabel_AfterListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After ListView"/>

</LinearLayout>

